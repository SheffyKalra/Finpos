<UserControl x:Class="FinPos.Client.Views.Pages.UserControls.ManageOffer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinPos.Client.Views.Pages.UserControls"
             mc:Ignorable="d"
             xmlns:myControl="clr-namespace:FinPos.Client.Controls"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:Enums="clr-namespace:FinPos.Utility.CommonEnums;assembly=FinPos.Utility"
             xmlns:System="clr-namespace:System;assembly=mscorlib" Name="ManageOfferUC">
    <UserControl.Resources>

        <ObjectDataProvider x:Key="EnumDataProvider" 
                        MethodName="GetValues" 
                        ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Enums:CommonEnum+DiscountType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <SolidColorBrush x:Key="RedBrush" Color="#0091EA"/>

        <SolidColorBrush x:Key="SolidBorderBrush" Color="#fff" />

        <SolidColorBrush x:Key="GreenBrush" Color="#1f579c" />

        <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#EEE" />

        <SolidColorBrush x:Key="DisabledBorderBrush" Color="#AAA" />

        <SolidColorBrush x:Key="DisabledForegroundBrush" Color="#888" />
        <!-- This style is used for buttons, to remove the WPF default 'animated' mouse over effect -->
        <Style x:Key="MyButtonStyle" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
                            BorderThickness="0"
                            Padding="0" 
                            BorderBrush="Transparent" 
                            CornerRadius="0" 
                            Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="Black" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border 
                                Name="Border"
                                Margin="0,0,-4,0" 
                                Background="{StaticResource RedBrush}"
                                BorderBrush="{StaticResource  SolidBorderBrush}" 
                                BorderThickness="1,1,1,1" 
                                 >
                                <ContentPresenter x:Name="ContentSite"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    ContentSource="Header"
                                    Margin="12,2,12,2"
                                    RecognizesAccessKey="True"/>
                            </Border>
                        </Grid>
                        <!--CornerRadius="2,12,0,0"-->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Panel.ZIndex" Value="100" />
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource GreenBrush}" />
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource DisabledBackgroundBrush}" />
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource DisabledBorderBrush}" />
                                <Setter Property="Foreground" Value="{StaticResource DisabledForegroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="inlineText" TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="20,5,10,0"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="center"/>
        </Style>


        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Margin" Value="10,5,20,0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5,10,0"/>
            <Setter Property="BorderBrush" Value="#e2e2e2"/>
            <Setter Property="BorderThickness" Value="2"/>

        </Style>
    </UserControl.Resources>

    <Grid Margin="0,0,15,0"   Language="En"  HorizontalAlignment="Stretch" DataContext="{Binding Source={StaticResource ResourceKey=productRequirements}}">

        <Grid.RowDefinitions >
            <RowDefinition  Height="55" />
            <RowDefinition  Height="*" />
            <RowDefinition  Height="65" />


        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Border BorderThickness="0 0 0 1" BorderBrush="#e2e2e2" Margin="15,0,15,0" >
            <Grid  Grid.Row="0"  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0*"/>
                </Grid.ColumnDefinitions>
                <Label FontSize="18" Foreground="#303030" Margin="0 10 0 0" Height="40" VerticalAlignment="Bottom" Name="page_Name"></Label>
            </Grid>
        </Border>




        <Grid Margin="15 15 15 0"  Grid.Row="1" Background="#f5f5f5"    HorizontalAlignment="Stretch"  >
            
            <TabControl  SelectionChanged="tabControl_SelectionChanged"    Name="tabControl" Padding="0 0 0 15">


                <TabItem  Name="default_Tab"  Margin="-2,0,2,0" Header="{StaticResource ResourceKey=HeaderTab_MinPurchaseAndDateTime}"  IsSelected="True" Width="300"  Background="#0091EA" Padding="10 " FontSize="14" Height="40" Foreground="#fff">

                    <Grid  Name="ContentPanel">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Name="LeftColumn"   Width="100*" />
                            <ColumnDefinition Name="RightColumn"  Width="100*"  />

                        </Grid.ColumnDefinitions>



                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition   Width="120" />
                                <ColumnDefinition   Width="*"  />

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15"/>
                                <RowDefinition Height="45"/>
                                <RowDefinition Height="45" />
                                <RowDefinition Height="45" />
                            </Grid.RowDefinitions>

                            <Label Grid.Column="0" Grid.Row="1" Content="{StaticResource  ResourceKey=Offer_Name_leftHeader}"  Margin="20,0,0,0"></Label>
                            <TextBox  Style="{StaticResource ResourceKey=validation}"  BorderBrush="#e2e2e2" FontSize="15" Padding="10 3" VerticalContentAlignment="Center" Text="{Binding UpdateSourceTrigger=PropertyChanged, Path=Name,Source={StaticResource ResourceKey=coupon},
                ValidatesOnDataErrors=true, NotifyOnValidationError=true}"                        
                             Grid.Column="1" Grid.Row="1" Name="txtName"  Height="36" Margin="0 0 30 0" Width="auto" MinWidth="200" />

                            <Label  Grid.Column="0" Grid.Row="2"  Name="lblOfferType" Content="{StaticResource  ResourceKey=Offer_type_Header}" Margin="20,0,0,0"></Label>
                            <ComboBox  Name="cmbOfferType"   Style="{StaticResource ResourceKey=validation}" Text="{Binding UpdateSourceTrigger=PropertyChanged, Path=DiscountType,Source={StaticResource ResourceKey=coupon},
                ValidatesOnDataErrors=true, NotifyOnValidationError=true}"  SelectionChanged="cmbOfferType_SelectionChanged"                      
                            Grid.Row="2"  Height="36" Margin="0 0 30 0" Width="auto" MinWidth="200"
                            Grid.Column="1"
                         ></ComboBox>
                            <Label Grid.Column="0" Grid.Row="3"   Name="batch_code" Content="{StaticResource  ResourceKey=Offer_Discount_Header}" Margin="20,0,0,0"></Label>
                            <TextBox  Style="{StaticResource ResourceKey=validation}" PreviewKeyDown="txtDiscount_PreviewKeyDown" LostFocus="txtDiscount_LostFocus"  BorderBrush="#e2e2e2" FontSize="13" Padding="10 3" VerticalContentAlignment="Center"
                          Grid.Column="1" Grid.Row="3" Name="txtDiscount"  MaxLength="100"  Height="36" Margin="0 0 30 0" Width="auto" MinWidth="200"/>

                        </Grid>

                        <Grid Grid.Column="1">
                            <!--Colummnn2-->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition   Width="135" />
                                <ColumnDefinition   Width="*"  />

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15"/>
                                <RowDefinition Height="45"/>
                                <RowDefinition Height="45" />
                                <RowDefinition Height="45" />
                            </Grid.RowDefinitions>


                            <Label Grid.Column="0" Grid.Row="1"  Name="quantity" Content="{StaticResource  ResourceKey=coupon_From_Date_Header}" Margin="20,0,0,0"></Label>
                            <DatePicker  FontSize="15" Grid.Column="1"  Grid.Row="1"  Name="DTPFromDate"  Margin="0 0 30 0"   BorderThickness="1" BorderBrush="#e2e2e2"   Padding="10 0" VerticalContentAlignment="Center" Text="{Binding UpdateSourceTrigger=PropertyChanged, Path=FromDate,Source={StaticResource ResourceKey=coupon},
                ValidatesOnDataErrors=true, NotifyOnValidationError=true}"  Height="36"   Width="auto" MinWidth="200" />

                            <Label Grid.Column="0" Grid.Row="2"  Content="{StaticResource  ResourceKey=coupon_To_Date_Header}" Margin="20,0,0,0"></Label>

                            <DatePicker  FontSize="13" Grid.Column="1"  Grid.Row="2"  Name="DTPToDate"    Height="36" Margin="0 0 30 0" Width="auto" MinWidth="200" BorderThickness="1" BorderBrush="#e2e2e2"   Padding="10 0" VerticalContentAlignment="Center" Text="{Binding UpdateSourceTrigger=PropertyChanged, Path=ToDate,Source={StaticResource ResourceKey=coupon},
                ValidatesOnDataErrors=true, NotifyOnValidationError=true}"/>
                            <Label Grid.Column="0" Grid.Row="3"   Content="{StaticResource  ResourceKey=coupon_MinValue_Header}"  Margin="20,0,0,0"></Label>
                            <TextBox MaxLength="8" Style="{StaticResource ResourceKey=validation}" PreviewTextInput="txtMinimumValue_PreviewTextInput" PreviewKeyDown="txtMinimumValue_PreviewKeyDown"  BorderBrush="#e2e2e2" FontSize="13" Padding="10 3" VerticalContentAlignment="Center" Text="{Binding UpdateSourceTrigger=PropertyChanged, Path=Quantity,Source={StaticResource ResourceKey=coupon},
                            ValidatesOnDataErrors=true, NotifyOnValidationError=true}"
                          Grid.Column="1" Grid.Row="3" Name="txtMinimumValue"   Height="36" Margin="0 0 30 0" Width="auto" MinWidth="200" />

                            <Border   BorderBrush="#e2e2e2" Visibility="Collapsed" Height="140" Background="#fff"
                         BorderThickness="1 1 1 1" Grid.Column="1" Margin="0,39,0,0" VerticalAlignment="Top" Grid.Row="1" Grid.RowSpan="4"  >
                                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,0">
                                    <StackPanel Name="resultStack"></StackPanel>
                                </ScrollViewer>
                            </Border>
                        </Grid>

                    </Grid>

                    <!--<DockPanel Margin="17,0,0,15"  HorizontalAlignment="Left"  Name="innerContentDock" Grid.ColumnSpan="3">
                            <Grid DockPanel.Dock="Right"  Background="#fff"  Name="innerContentPanel" Height="360" Width="1153"  VerticalAlignment="Top" Margin="0,0,0,-66">-->



                </TabItem>


                <TabItem Margin="2,-0,-2,0" Header="{StaticResource ResourceKey=HeaderTab_ItemSpecific}"  Name="ItemSpecific" Visibility="Visible" Width="300" Background="#0091EA" Padding="10" FontSize="14"  Height="40" Foreground="#fff">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="55" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="40"/> 
                        </Grid.RowDefinitions>
