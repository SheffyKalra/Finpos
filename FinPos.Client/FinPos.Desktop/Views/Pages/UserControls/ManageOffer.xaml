                                                                    <Setter Property="Foreground" Value="#000"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Resources>
                                                     <TextBox Name="txtDiscount" Background="#fff" Margin="0" IsReadOnly="False" BorderThickness="1" BorderBrush="#e7e7e7"  VerticalContentAlignment="Center"  Foreground="#333" MinWidth="150" Height="30" FontSize="13" Padding="0" Text="{Binding Discount}" PreviewKeyDown="txtDiscount_PreviewKeyDown_1"  LostFocus="txtDiscount_LostFocus_1"></TextBox>
