                <ListBox  Name="lbAutoCat" SelectionChanged="lbAutoCat_SelectionChanged" Height="60" BorderBrush="#ccc" Visibility="Collapsed" Background="#fff"
                                        BorderThickness="1"   Margin="0 0 30 0"  Width="auto" MinWidth="100"  Grid.Row="3" Grid.Column="1" VerticalAlignment="Top">
                </ListBox>

            </Grid>

            <Grid Grid.Column="1">
                <!--Colummnn2-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition   Width="135" />
                    <ColumnDefinition   Width="*"  />

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="1" Style="{StaticResource inlineText}"  Name="itemType" Text="{StaticResource  ResourceKey=grid_product_type}" Margin="15 0 0 0"  ></TextBlock>
                <ComboBox SelectionChanged="item_Type_SelectionChanged" Style="{StaticResource ResourceKey=validation1}"   FontSize="13" Padding="10 3"  
                         SelectedValue="{Binding UpdateSourceTrigger=PropertyChanged, Path=ItemType,Source={StaticResource ResourceKey=productRequirements},
                ValidatesOnDataErrors=true, NotifyOnValidationError=true}" IsReadOnly="True" IsEditable="True"  Grid.Column="1" Margin="0 0 15 0" Height="36" VerticalContentAlignment="Center" BorderThickness="1" BorderBrush="#e2e2e2"  Grid.Row="1" Name="item_Type"/>

                <TextBlock Grid.Column="0" Grid.Row="2" Style="{StaticResource inlineText}"  Name="shortName" Text="{StaticResource  ResourceKey=short_name}" Margin="15 0 0 0"  ></TextBlock>
