                                    <TextBox IsReadOnly="True" PreviewKeyDown="txt_cmpPhone_PreviewKeyDown" PreviewTextInput="reorder_level_PreviewTextInput" Visibility="Collapsed" AcceptsReturn="True" FontSize="15" Padding="10 3"  Name="bulk_Code" MaxLength="50"  Margin="0 0 30 0" Height="35" Width="auto"  MinWidth="200" VerticalContentAlignment="Center" Grid.Row="6" Grid.Column="1" BorderThickness="1" BorderBrush="#e2e2e2" PreviewMouseDown="txtProductBulk_PreviewMouseDown" />


                                </Grid>

                                <Grid Grid.Column="1">
