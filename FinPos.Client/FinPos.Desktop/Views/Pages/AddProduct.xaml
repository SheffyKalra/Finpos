Text="{Binding UpdateSourceTrigger=PropertyChanged, Path=TradePrice,Source={StaticResource ResourceKey=productRequirements},
                            ValidatesOnDataErrors=true, NotifyOnValidationError=true}" PreviewKeyDown="txt_cmpPhone_PreviewKeyDown" LostFocus="check_IsnumericValue" PreviewTextInput="txt_cmpPhone_PreviewTextInput"  Name="trade_price" MaxLength="15" VerticalContentAlignment="Center" BorderThickness="1" BorderBrush="#e2e2e2" Grid.Column="1" Grid.Row="4"   Width="auto" MinWidth="200"  Height="35" Margin="0 0 30 0" />




