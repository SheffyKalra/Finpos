                                        <RowDefinition Height="45"/>
                                        <RowDefinition Height="45" />
                                        <RowDefinition Height="45" />
                                        <RowDefinition Height="45" />
                                        <RowDefinition Height="45" />
                                        <RowDefinition Height="45" />
                                    </Grid.RowDefinitions>
                                    <Label FontSize="14"  Name="retailprice" Content="{StaticResource  ResourceKey=retail_price}" Margin="8 0 0 0" Grid.Row="1" Grid.Column="0"></Label>
                                    <TextBox  Style="{StaticResource ResourceKey=validation}" Validation.Error="txtEmail_Error" FontSize="15" Padding="10 3" Text="{Binding RetailPrice, NotifyOnValidationError=true, Source={StaticResource ResourceKey=productRequirements}, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}" PreviewKeyDown="txt_cmpPhone_PreviewKeyDown" LostFocus="check_IsnumericValue" PreviewTextInput="txt_cmpPhone_PreviewTextInput"   x:Name="retail_price" MaxLength="15" VerticalContentAlignment="Center" BorderThickness="1" BorderBrush="#e2e2e2" Grid.Column="1" Grid.Row="1"   Width="auto" MinWidth="200"  Height="35" Margin="0 0 30 0" />

                                    <Label FontSize="14"   Name="reorderLevel" Content="{StaticResource  ResourceKey=reorderlevel}"  Grid.Row="2" Grid.Column="0"  Margin="8,0,0,0"></Label>
                                    <TextBox  FontSize="15" PreviewKeyDown="txt_cmpPhone_PreviewKeyDown" LostFocus="check_IsnumericValue" PreviewTextInput="reorder_level_PreviewTextInput" Padding="10 3"  Name="reorder_level" MaxLength="8"  Margin="0 0 30 0" Width="auto" MinWidth="200" Grid.Row="2" Grid.Column="1"  VerticalContentAlignment="Center" BorderThickness="1" BorderBrush="#e2e2e2" Height="35" />

                                    <Label  FontSize="14"  Name="description" Content="{StaticResource  ResourceKey=description}" Margin="8 0 0 0" Grid.Row="3" Grid.Column="0"></Label>
