                                    <TextBox Height="35"  FontSize="15" Padding="10 3" LostFocus="check_IsnumericValue" Name="wholeseller_price" PreviewKeyDown="txt_cmpPhone_PreviewKeyDown" PreviewTextInput="txt_cmpPhone_PreviewTextInput" MaxLength="15" Margin="0 0 13 0" Grid.Row="1" Grid.Column="1" Width="auto" MinWidth="200"  VerticalContentAlignment="Center" BorderThickness="1" BorderBrush="#e2e2e2" />

                                    <!-- 2nd row -->

                                    <Label FontSize="14"  Name="weight" Content="{StaticResource  ResourceKey=weight}"   Grid.Row="2" Grid.Column="0" Margin="11 0 0 0" ></Label>
