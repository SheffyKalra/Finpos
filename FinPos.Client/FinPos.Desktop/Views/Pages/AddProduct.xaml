                                    <Button MinWidth="100" Width="auto" Height="30" IsEnabled="True"  Style="{StaticResource MyButtonStyle}" Click="btn_uploadlogo_Click" Name="btn_uploadlogo" Background="#0091EA" BorderThickness="0"    Margin="0 0 90 0" Foreground="#fff"   FontSize="13" Content="{StaticResource  ResourceKey=product_img}" VerticalAlignment="Bottom"   Cursor="Hand" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right"/>
                                    <Button IsEnabled="True" MinWidth="70" Width="auto" Style="{StaticResource MyButtonStyle}" Name="btn_removelogo" Background="#eb5151" BorderThickness="0"  Click="btn_removelogo_Click" Margin="0,0,15,0" Foreground="#fff"  Height="30" FontSize="13" Content="{StaticResource  ResourceKey=remove_logo}" VerticalAlignment="Bottom"   Cursor="Hand" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right"/>


                                </Grid>







                                <Popup Name="productBulkPopUp"     Width="600" Placement="AbsolutePoint" PlacementTarget="{Binding ElementName=lvOpeningStock}">
                                    <i:Interaction.Behaviors>
                                        <my:MouseDragPopupBehavior></my:MouseDragPopupBehavior>
                                    </i:Interaction.Behaviors>
                                    <Grid  VerticalAlignment="Center" >
                                        <DockPanel LastChildFill="True" Margin="0,0,0,1" Width="600" >
                                            <Grid DockPanel.Dock="left" Width="600" Background="#f2f2f2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="600" />
                                                    <ColumnDefinition Width="600" />
                                                    <ColumnDefinition Width="600" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="40" />
