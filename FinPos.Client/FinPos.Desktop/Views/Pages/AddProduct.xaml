                                    <Image  Source="{StaticResource ResourceKey=barcode_icon}"   Name="barcodeLogo"    MinWidth="80" Width="auto" HorizontalAlignment="Right"  Grid.Row="5" Grid.Column="1"  Margin="0 0 30 0"   />

