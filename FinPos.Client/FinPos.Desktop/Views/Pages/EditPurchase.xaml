                            Grid.Column="1"  Grid.Row="5"  Name="purchase_invoiceDate" Margin="0" Height="32" Background="#fff"  Width="auto"/>

                <!--<TextBlock Grid.Column="0" Grid.Row="4"  Style="{StaticResource inlineText}" Text="{StaticResource  ResourceKey=purchase_invoiceDate}" Margin="20,0,5,0"></TextBlock>
                        <DatePicker  FontSize="15" Padding="0 3"  BorderBrush="#e2e2e2"  VerticalContentAlignment="Center"
                            Grid.Column="1"  Grid.Row="4"  Name="purchase_invoiceDate" Margin="0" Height="30"  Width="225"/>-->
                <!--<TextBlock Grid.Column="0" Grid.Row="5"  Style="{StaticResource inlineText}" Text="{StaticResource  ResourceKey=purchase_invoiceNo}" Margin="20,0,5,0"></TextBlock>
                        <TextBox  FontSize="15" Padding="0 3"  BorderBrush="#e2e2e2"  VerticalContentAlignment="Center"
                            Grid.Column="1"  Grid.Row="5"  Name="purchase_invoiceNo" Margin="0" Height="30"  Width="225"/>-->
                <TextBlock Grid.Column="0" Grid.Row="6" Style="{StaticResource inlineText}"   Text="{StaticResource  ResourceKey=purchase_invoiceNo}"  Margin="20,0,5,0" ></TextBlock>
                <TextBox FontSize="13" Padding="0 3"  Height="32"  BorderBrush="#e2e2e2" Width="auto" Margin="0"   VerticalContentAlignment="Center" 
                         Grid.Column="1" Grid.Row="6" IsEnabled="False" Name="purchase_invoiceNo"  />


            </Grid>

            <Grid Grid.Column="2" Name="innerContentPanel2" Margin="15 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition   Width="120" />
                    <ColumnDefinition   Width="*"  />

                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="2"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                </Grid.RowDefinitions>
                <Border Grid.Row="1" BorderThickness="0 0 0 1" BorderBrush="#ccc" Grid.Column="0" Grid.ColumnSpan="2">
                    <TextBlock Foreground="#1f579c" FontSize="16" FontWeight="Bold"  Grid.Column="0" Grid.Row="0"  Style="{StaticResource inlineText}" Name="purchaseCashHeader" Text="{StaticResource  ResourceKey=purchase_cashHeader}"   Margin="20,0,0,0"></TextBlock>
                </Border>
                <TextBlock  Grid.Column="0" Grid.Row="2"  Style="{StaticResource inlineText}" Name="purchaseCashDis" Text="{StaticResource  ResourceKey=purchase_cashdiscount}"   Margin="20,0,5,0"></TextBlock>
                <TextBox FontSize="15" KeyUp="purchase_discount_KeyUp" Padding="10 3" PreviewTextInput="txt_decimal_PreviewTextInput"  BorderBrush="#e2e2e2"  VerticalContentAlignment="Center"
                         Grid.Column="1" LostFocus="amountCount_LostFocus" Grid.Row="2" Name="purchase_cashdiscount" MaxLength="50" Margin="0" Height="32"   />

                <TextBlock Grid.Column="0" Grid.Row="3" Style="{StaticResource inlineText}"  Name="purchaseCashDisWithDoller" Text="{StaticResource  ResourceKey=purchase_cashdiscountDoller}"  Margin="20,0,5,0" ></TextBlock>
                <TextBox  FontSize="15" Padding="10 3" PreviewTextInput="txt_decimal_PreviewTextInput"  BorderBrush="#e2e2e2"  VerticalContentAlignment="Center"
                         Grid.Column="1" Grid.Row="3" Name="purchase_cashdiscountDoller" LostFocus="purchase_cashdiscountDoller_LostFocus" MaxLength="100" Margin="0" Height="32" Width="auto"/>

                <TextBlock Grid.Column="0" Grid.Row="4" Style="{StaticResource inlineText}"  Name="purchaseTaxAmount" Text="{StaticResource  ResourceKey=purchase_cashTaxAmount}"   Margin="20,0,5,0" ></TextBlock>
                <!--<TextBox FontSize="15" Padding="10 3" PreviewTextInput="txt_decimal_PreviewTextInput" BorderBrush="#e2e2e2"  VerticalContentAlignment="Center"
                        Grid.Column="1" LostFocus="amountCount_LostFocus" Grid.Row="3" Name="purchase_cashTaxAmount" MaxLength="100" Margin="0" Height="25" Width="225"/>-->

                <TextBlock Grid.Column="0" Grid.Row="5"  Style="{StaticResource inlineText}" Text="{StaticResource  ResourceKey=purchase_cashSubChargeAmo}" Margin="20,0,5,0"></TextBlock>
                <TextBox FontSize="15" Padding="10 3" PreviewTextInput="txt_decimal_PreviewTextInput" BorderBrush="#e2e2e2"  VerticalContentAlignment="Center"
                           Grid.Column="1"  Grid.Row="5" LostFocus="amountCount_LostFocus" Name="purchase_cashSubChargeAmo" MaxLength="500" Height="32" Margin="0" Width="auto" />
                <ComboBox FontSize="15" x:Name="cmbTax" SelectionChanged="cmbTax_SelectionChanged"  Grid.Row="4" Grid.Column="1" Padding="10 3" BorderBrush="#e2e2e2"  VerticalContentAlignment="Center" Width="auto" Height="32" Margin="0"/>

            </Grid>

        </Grid>


        <Grid Grid.Row="2"   >

            <Grid.Resources>
                <converter:InverseBooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>



                <Popup Name="productPopUp" Height="380"  Width="600" Placement="Center" PlacementTarget="{Binding ElementName=lstPurchase}">
                    <i:Interaction.Behaviors>
                        <myControl:MouseDragPopupBehavior></myControl:MouseDragPopupBehavior>
                    </i:Interaction.Behaviors>
                    <Grid  VerticalAlignment="Center" >
                        <DockPanel LastChildFill="True" Margin="0,0,0,0" Width="600" >
