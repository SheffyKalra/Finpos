                        <TextBox  FontSize="15" Padding="10 3"
                          Grid.Column="1" Grid.Row="1" Name="purchase_pono" MaxLength="50" Margin="23,15,33,10" Height="Auto" Width="Auto"/>

                        <TextBlock Grid.Column="0" Grid.Row="2" Style="{StaticResource inlineText}"  Name="purchaseRefno" Text="{StaticResource  ResourceKey=purchase_refNo}" Height="21" Margin="20,22,10,17" ></TextBlock>
                        <TextBox  FontSize="15" Padding="10 3"
                          Grid.Column="1" Grid.Row="2" Name="purchase_refNo" MaxLength="100" Margin="21,16,32,10" Height="Auto" Width="Auto"/>-->
                <!--<TextBlock  Grid.Column="0" Grid.Row="1"  Style="{StaticResource inlineText}" Name="purchasePono"  Text="{StaticResource  ResourceKey=purchase_pono}" Margin="20,0,5,0" ></TextBlock>
                        <TextBox  FontSize="15" Padding="10 3" BorderBrush="#e2e2e2" Width="225"   BorderThickness="1" VerticalContentAlignment="Center"
                          Grid.Column="1" Grid.Row="1"  IsEnabled="False" MaxLength="50" Margin="0" Height="30" />-->
                <TextBlock Grid.Column="0" Grid.Row="2" Style="{StaticResource inlineText}"  Name="purchasePono" Text="{StaticResource  ResourceKey=purchase_pono}"  Margin="20,0,5,0" ></TextBlock>
                <TextBox FontSize="13" Padding="0 3"  Height="32"  BorderBrush="#e2e2e2" Width="auto" Margin="0"   VerticalContentAlignment="Center"
                         Grid.Column="1" Grid.Row="2" IsEnabled="False" Name="purchase_pono" TextChanged="purchase_pono_TextChanged"  />

                <TextBlock Grid.Column="0" Grid.Row="3" Style="{StaticResource inlineText}"  Name="purchaseExpiryDate" Text="{StaticResource  ResourceKey=purchase_expiryDate}"  Margin="20,0,5,0" ></TextBlock>
                <DatePicker Style="{StaticResource ResourceKey=DatePickerStyle1}" FontSize="13" Padding="0 3"  Height="32" Background="#fff" BorderBrush="#e2e2e2" Width="auto" Margin="0"   VerticalContentAlignment="Center"
                         Grid.Column="1" Grid.Row="3" Name="purchase_expiryDate"  />

                <TextBlock Grid.Column="0" Grid.Row="4"  Style="{StaticResource inlineText}" Text="{StaticResource  ResourceKey=purchase_deliveryDate}" Margin="20,0,5,0"></TextBlock>
                <DatePicker Style="{StaticResource ResourceKey=DatePickerStyle1}" FontSize="13" Padding="0 3"  BorderBrush="#e2e2e2"  VerticalContentAlignment="Center"
                            Grid.Column="1"  Grid.Row="4"  Name="purchase_deliveryDate" Margin="0" Height="32" Background="#fff" Width="auto"/>

                <TextBlock Grid.Column="0" Grid.Row="5"  Style="{StaticResource inlineText}" Text="{StaticResource  ResourceKey=purchase_invoiceDate}" Margin="20,0,5,0"></TextBlock>
