                <Grid.ColumnDefinitions>
                    <ColumnDefinition   Width="100" />
                    <ColumnDefinition   Width="*"  />

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                </Grid.RowDefinitions>
                <Border Grid.Row="1" BorderThickness="0 0 0 1" BorderBrush="#ccc" Grid.Column="0" Grid.ColumnSpan="2">
                    <TextBlock Foreground="#1f579c" FontSize="14" FontWeight="Bold" Grid.Column="0" Grid.Row="0"  Style="{StaticResource inlineText}" Name="suplierHeader" Text="{StaticResource  ResourceKey=purchase_suplierHeader}"   Margin="0"></TextBlock>
                </Border>

                <!--<TextBlock  Grid.Column="0" Grid.Row="1"  Style="{StaticResource inlineText}" Name="suplierCode" Text="{StaticResource  ResourceKey=supplier_code}"   Margin="20,0,5,0"></TextBlock>
                        <TextBox KeyUp="TextBox_KeyUp" PreviewTextInput="reorder_level_PreviewTextInput" LostFocus="txtSuplierCode_LostFocus"  FontSize="15" Padding="0 3" BorderBrush="#e2e2e2"  VerticalContentAlignment="Center"
                          Grid.Column="1" Grid.Row="1" Name="txt_SuplierCode" MaxLength="50" Margin="0" Height="30" Width="225" TextChanged="txt_SuplierCode_TextChanged"  />-->

                <TextBlock Grid.Column="0" Grid.Row="2" Style="{StaticResource inlineText}"  Name="supliername" Text="{StaticResource  ResourceKey=supplier_name}"   Margin="0 0 0 0 " ></TextBlock>

                <DockPanel
                            Height="32"  
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="0 0 0 0">
                    <my:ShadowedTextBox Label="Enter Supplier" MaxLength="100"  KeyUp="supplier_name_KeyUp" LostFocus="supplier_name_LostFocus"  Padding="10 0"
                                Style="{StaticResource ResourceKey=validation}"   Text="{Binding UpdateSourceTrigger=PropertyChanged, Path=SupplierName,Source={StaticResource ResourceKey=supplier},
                ValidatesOnDataErrors=true, NotifyOnValidationError=true}"  Grid.Row="2" Grid.Column="1" x:Name="supplier_name" FontSize="13"    Margin="0"    Height="32" Width="auto"   VerticalContentAlignment="Center" BorderThickness="1" BorderBrush="#e2e2e2" >

