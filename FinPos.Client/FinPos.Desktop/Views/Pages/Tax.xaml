                Height="40"
               Margin="0,-55,109,14"
                HorizontalAlignment="Right"
                Background="#0091EA"
                BorderBrush="Transparent"
                BorderThickness="0"
                Click="btn_Delete_Click"
                Cursor="Hand"
                FontSize="14"
