                            Padding="5,3"
                            VerticalContentAlignment="Center"
                            BorderBrush="#e2e2e2"
                            BorderThickness="1"
                            FontSize="13"
                            Foreground="#969696"
                            GotFocus="tax_search_GotFocus"
                            KeyUp="tax_search_KeyUp"
                            LostFocus="tax_search_LostFocus"
                            MaxLength="50"
                            Tag="Search"
                            Text="Search" />
